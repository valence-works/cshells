{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Custom": {
    "Shell": {}
  },
  "CShells": {
    "Shells": [
      {
        "Name": "Default",
        "Features": [ "Core", "StripePayment", "EmailNotification" ],
        "Properties": {
          "WebRouting": {
            "Path": ""
          }
        }
      },
      {
        "Name": "Acme",
        "Features": [
          "Core",
          "PayPalPayment",
          "SmsNotification",
          { "Name": "FraudDetection", "Threshold": 0.85, "MaxTransactionAmount": 5000 }
        ],
        "Properties": {
          "WebRouting": {
            "Path": "acme",
            "HeaderName": "X-Tenant-Id"
          }
        }
      },
      {
        "Name": "Contoso",
        "Features": [
          "Core",
          "StripePayment",
          "MultiChannelNotification",
          { "Name": "FraudDetection", "Threshold": 0.6, "MaxTransactionAmount": 25000 },
          "Reporting"
        ],
        "Properties": {
          "WebRouting": {
            "Path": "contoso"
          }
        }
      }
    ]
  }
}
