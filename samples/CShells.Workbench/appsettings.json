{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Custom": {
    "Shell": {}
  },
  "CShells": {
    "Shells": [
      {
        "Name": "Default",
        "Features": [ "Core", "StripePayment", "EmailNotification" ],
        "Properties": {
          "WebRouting": {
            "Path": ""
          }
        },
        "Settings": {
          "ConnectionStringKey": "DefaultConnection",
          "Theme": "Light",
          "MaxUploadSizeMB": 10,
          "Tier": "Standard"
        }
      },
      {
        "Name": "Acme",
        "Features": [ "Core", "PayPalPayment", "SmsNotification", "FraudDetection" ],
        "Properties": {
          "WebRouting": {
            "Path": "acme",
            "HeaderName": "X-Tenant-Id"
          }
        },
        "Settings": {
          "ConnectionStringKey": "AcmeConnection",
          "Theme": "Dark",
          "MaxUploadSizeMB": 50,
          "Tier": "Premium",
          "Features": {
            "FraudDetection": {
              "Threshold": 0.85,
              "MaxTransactionAmount": 5000
            }
          }
        }
      },
      {
        "Name": "Contoso",
        "Features": [ "Core", "StripePayment", "MultiChannelNotification", "FraudDetection", "Reporting" ],
        "Properties": {
          "WebRouting": {
            "Path": "contoso"
          }
        },
        "Settings": {
          "ConnectionStringKey": "ContosoConnection",
          "Theme": "Light",
          "MaxUploadSizeMB": 100,
          "Tier": "Enterprise",
          "Features": {
            "FraudDetection": {
              "Threshold": 0.6,
              "MaxTransactionAmount": 25000
            }
          }
        }
      }
    ]
  }
}
