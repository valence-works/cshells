{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CShells": {
    "Shells": [
      {
        "Name": "Default",
        "Features": [ "Core", "Weather", "Greetings" ],
        "Properties": {
          "Title": "Default site (Standard Weather)"
        }
      },
      {
        "Name": "Tropical",
        "Features": [ "Core", "TropicalWeather", "Greetings" ],
        "Properties": {
          "Title": "Tropical site (Tropical Weather)"
        }
      },
      {
        "Name": "Admin",
        "Features": [ "Core", "Admin", "Greetings" ],
        "Properties": {
          "Title": "Admin area"
        }
      }
    ]
  }
}
